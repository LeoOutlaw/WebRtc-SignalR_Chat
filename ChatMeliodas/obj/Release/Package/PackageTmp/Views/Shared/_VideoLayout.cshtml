<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Chat</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/jquery.ui.chatbox.css")
    @Styles.Render("~/Scripts/jquery.ui/jquery-ui.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @RenderSection("styles", required: false)
</head>
<body>
    @{
        bool validate;
        if (Session["userName"] != null)
        {
            validate = true;
        }
        else
        {
            validate = false;
        }
    }

        @RenderBody()
        @if (validate)
        {
            @Html.Partial("_Chat")
        }

    @Scripts.Render("~/Scripts/arg.js")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/jquery.ui/jquery-ui.js")
    @Scripts.Render("~/Scripts/jquery.signalR-2.4.1.min.js")
    @Scripts.Render("~/signalr/hubs")
    @Scripts.Render("~/Scripts/jquery.ui.chatbox.js")
    @RenderSection("scripts", required: false)


</body>
</html>